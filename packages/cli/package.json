{
  "name": "@chrisjune/guardforge",
  "version": "0.1.0",
  "description": "GuardForge CLI for testing AI safety guardrails in local and CI workflows.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Chris-June/AIGuard.git"
  },
  "homepage": "https://github.com/Chris-June/AIGuard",
  "bugs": {
    "url": "https://github.com/Chris-June/AIGuard/issues"
  },
  "keywords": [
    "ai",
    "guardrails",
    "security",
    "prompt-injection",
    "cli",
    "testing"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
